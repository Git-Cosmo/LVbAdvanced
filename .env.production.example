# FPSociety Production Environment Configuration
# Copy this file to .env and update all values for your production environment

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="FPSociety"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE # Generate with: php artisan key:generate
APP_DEBUG=false # MUST be false in production!
APP_URL=https://yourdomain.com
APP_TIMEZONE=UTC
APP_LOCALE=en

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=fpsociety_prod
DB_USERNAME=fpsociety_user
DB_PASSWORD=STRONG_PASSWORD_HERE # Use a strong, unique password!

# ============================================
# CACHE & SESSION
# ============================================
CACHE_DRIVER=redis # Recommended for production
SESSION_DRIVER=redis # Recommended for production
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=redis # Recommended for production

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io # Update with your SMTP server
MAIL_PORT=2525
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@fpsociety.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=daily
LOG_LEVEL=error # Set to 'error' in production to reduce noise
LOG_DEPRECATIONS_CHANNEL=null

# ============================================
# FILESYSTEM & STORAGE
# ============================================
FILESYSTEM_DISK=local # Or 's3' for cloud storage

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# BROADCASTING (Optional)
# ============================================
BROADCAST_DRIVER=log # Or 'pusher', 'reverb', etc.

# Pusher Configuration (if using)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ============================================
# OAUTH PROVIDERS
# ============================================

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI="${APP_URL}/auth/discord/callback"

# Steam OAuth
STEAM_CLIENT_KEY=your_steam_api_key
STEAM_REDIRECT_URI="${APP_URL}/auth/steam/callback"

# Battle.net OAuth
BATTLENET_CLIENT_ID=your_battlenet_client_id
BATTLENET_CLIENT_SECRET=your_battlenet_client_secret
BATTLENET_REDIRECT_URI="${APP_URL}/auth/battlenet/callback"
BATTLENET_REGION=us # us, eu, kr, tw, or cn

# ============================================
# THIRD-PARTY APIS
# ============================================

# CheapShark (Game Deals)
CHEAPSHARK_API_URL=https://www.cheapshark.com/api/1.0

# AzuraCast (Radio)
AZURACAST_BASE_URL=https://your-radio-server.com
AZURACAST_API_KEY=your_azuracast_api_key

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT="FPSociety:v1.0"

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DISK=s3 # Or 'local'
BACKUP_NOTIFICATION_EMAIL=admin@fpsociety.com
BACKUP_MYSQL_PATH=/usr/bin/mysql
BACKUP_MYSQLDUMP_PATH=/usr/bin/mysqldump

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12 # 10-12 recommended
SESSION_SECURE_COOKIE=true # Always true with HTTPS
SANCTUM_STATEFUL_DOMAINS=yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
THROTTLE_LIMIT=60 # Requests per minute
THROTTLE_DECAY=1 # Minutes

# ============================================
# SEO & ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID= # Optional: UA-XXXXXXXXX-X or G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID= # Optional: GTM-XXXXXXX

# ============================================
# ERROR TRACKING (Optional)
# ============================================
SENTRY_LARAVEL_DSN= # Optional: For error tracking
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# CDN CONFIGURATION (Optional)
# ============================================
CDN_URL= # Optional: https://cdn.yourdomain.com

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_REGISTRATION_ENABLED=true
FEATURE_FORUM_ENABLED=true
FEATURE_TOURNAMENTS_ENABLED=true
FEATURE_EVENTS_ENABLED=true
FEATURE_MESSAGING_ENABLED=true

# ============================================
# MISC SETTINGS
# ============================================
TELESCOPE_ENABLED=false # Disable in production for security
DEBUGBAR_ENABLED=false # Disable in production
SCHEDULE_MONITOR_ENABLED=true

# ============================================
# VITE BUILD
# ============================================
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================
# NOTES
# ============================================
# 1. Always use HTTPS in production (APP_URL must start with https://)
# 2. Set APP_DEBUG=false to hide error details from users
# 3. Use strong passwords for database and Redis
# 4. Configure proper backup strategy
# 5. Set up cron jobs for scheduled tasks
# 6. Configure queue workers with supervisor
# 7. Enable Redis for better performance
# 8. Set up monitoring and error tracking
# 9. Review and update OAuth callback URLs
# 10. Test all configurations before going live!
